<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DVRVoxtronic">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:text="DVR Voxtronic AAEON Maintenance Schedules"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/daily"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:onClick="dailyAaeon"
            android:text="DAILY" />


        <Button
            android:id="@+id/monthly"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:onClick="monthlyAaeon"
            android:layout_height="wrap_content"
            android:text="MONTHLY" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_marginTop="200dp"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:text="DVR Voxtronic Dynalog Maintenance Schedules"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/daily1"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_row="3"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:onClick="dailyDynalog"
            android:text="DAILY" />


        <Button
            android:id="@+id/monthly1"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:onClick="monthlyDynalog"
            android:layout_height="wrap_content"
            android:text="MONTHLY" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_row="4"
            android:text="Â© 2022-2023 Naveen Singh Rana"
            android:textAlignment="center"
            android:textStyle="italic|bold"
            android:textColor="@color/teal_700"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:id="@+id/textView2" />
    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>