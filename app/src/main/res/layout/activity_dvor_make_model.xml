<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DvorMakeModelActivity">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:text="Select DVOR Make and Model"
            android:textAlignment="center"
            android:textColor="@color/teal_700"
            android:textSize="22sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/thales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_margin="2dp"
            android:layout_column="0"
            android:onClick="thales"
            android:text="THALES 432" />

        <Button
            android:id="@+id/mopiens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:onClick="mopiens"
            android:text="MOPIENS MARU 220" />

        <Button
            android:id="@+id/asii"
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/teal_700"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:onClick="asii"
            android:layout_height="wrap_content"
            android:text="ASII 1150" />

        <Button
            android:id="@+id/selex"
            android:layout_width="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="@color/teal_700"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:onClick="selex"
            android:layout_height="wrap_content"
            android:text="SELEX 1150" />




        <Button
            android:id="@+id/gcel755"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:onClick="gcel755"
            android:backgroundTint="@color/teal_700"
            android:text="GECL 755" />





        <Button
            android:id="@+id/gcel757"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:onClick="gcel757"
            android:backgroundTint="@color/teal_700"
            android:text="GECL 757" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:text="Â© 2022-2023 Akshay Bele"
            android:textAlignment="center"
            android:textStyle="italic|bold"
            android:textColor="@color/teal_700"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:id="@+id/textView2" />



    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

