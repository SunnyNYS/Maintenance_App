                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:hint="±0.002 %"
                        android:minHeight="48dp"
                        android:textSize="12sp" />
                    <EditText
                        android:id="@+id/editTextGpAsiiAnnualFreqSep"
