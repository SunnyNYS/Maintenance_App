<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_nav_aids"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
tools:context=".NavAidsActivity">


<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="53dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <Button
        android:text="DVOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dvor"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="dvorClicked"/>

    <Button
        android:text="DME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dme"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="dmeClicked"/>

    <Button
        android:text="LLZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llz"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="llzClicked"/>

    <Button
        android:text="GP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="gpClicked"/>

    <Button
        android:text="NDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ndb"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="ndbClicked"/>

    <Button
        android:text="LOCATOR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locator"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="locatorClicked"/>

    <Button
        android:text="MARKER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/marker"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="markerClicked"/>


    <Button
        android:text="Others1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/others1"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="others1Clicked"/>

</GridLayout>

<TextView
    android:text="Â© 2019-2020 Deepak Singh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView2"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

<TextView
    android:text="Select Equipment to perform Maintenance."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/textView3"
    android:textColor="@color/colorAccent"
    android:textStyle="normal|bold"
    android:textSize="18sp" />



</RelativeLayout>